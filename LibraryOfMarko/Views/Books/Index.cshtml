@model List<Book>
@section NavigationBar
{
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Search">Search</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="AddBook">Add book</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
}

<div class="text-center">Most rented books:</div>
<br>
<div class="card-deck">
    @foreach (Book book in Model)
    {
        string imagePath = book.CoverPath ?? "~/images/cover-generic.png";
        <div class="card" style="width: auto">
            <img src="@imagePath" asp-append-version="false" height="150"><br>
            <div class="card-body">
                <div class="card-text" style="text-align:center">
                    <a asp-action="BookDetails" asp-controller="Books" asp-route-bookId="@book.ID">
                        @book.Title<br>by<br>
                        @book.Author
                    </a>
                </div>
            </div>
        </div>
    }
</div>
