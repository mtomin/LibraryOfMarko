@model LibraryOfMarko.Views.ViewModels.AddBookViewModel

@section NavigationBar
{
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Search">Search</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="AddBook">Add book</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
}

<form action="EditBook" method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Book.Title">Book title</label>
        <input asp-for="Book.Title" value="@Model.Book.Title">
    </div>
    <div>
        <label asp-for="Book.Author">Author</label>
        <input asp-for="Book.Author" value="@Model.Book.Author">
    </div>
    <div>
        <label asp-for="Book.CopiesAvailable">Number of copies available</label>
        <input asp-for="Book.CopiesAvailable" value="@Model.Book.CopiesAvailable">
    </div>
    <div>
        <label asp-for="Book.ID">Book ID</label>
        <input asp-for="Book.ID" readonly="readonly" value="@Model.Book.ID">
    </div>
    <div>
        <label asp-for="Cover">Book cover (optional)</label>
        <input asp-for="Cover">
    </div>
    <div>
        <input type="submit" value="Edit" />
    </div>
</form>