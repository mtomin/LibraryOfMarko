@model Book
@{string imagePath = Model.CoverPath ?? "~/images/cover-generic.png";}

@section NavigationBar
    {
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Search">Search</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="AddBook">Add book</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
}
<div class="card" style="min-width:100px; max-width:300px">
    <p class="card-body" style="align-self:center">
        <img src="@imagePath" asp-append-version="false" width="150" /><br>
        @Model.Title<br>
        @Model.Author<br>
        Copies available: @Model.CopiesAvailable
    </p>
</div>
<div class="card-footer"  style="min-width:100px; max-width:300px;">
    <a style="float:left" asp-controller="Books" asp-action="EditBook" asp-route-bookID="@Model.ID" method="get" class="btn btn-primary">Edit book</a>
    <a style="float:right" asp-controller="Books" asp-action="RentBook" asp-route-bookID="@Model.ID" class="btn btn-primary">Rent book</a>
</div>